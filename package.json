{
    "name": "@nativescript-community/ui-collectionview",
    "version": "1.0.0",
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@nativescript/core": "~8.0.3",
        "@nativescript/eslint-plugin": "^0.0.4",
        "@nativescript/types-android": "8.0.1",
        "@nativescript/types-ios": "8.0.1",
        "@nativescript/webpack": "4.1.0",
        "@types/node": "14.6.4",
        "@typescript-eslint/eslint-plugin": "4.15.1",
        "@typescript-eslint/parser": "4.15.1",
        "cpy-cli": "^3.1.1",
        "eslint": "7.20.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-prettier": "^3.3.1",
        "husky": "^4.3.8",
        "jest": "^26.6.3",
        "jest-circus": "^26.6.3",
        "jest-cli": "^26.6.3",
        "lerna": "^3.22.1",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "rxjs": "^6.6.3",
        "ts-patch": "^1.3.2",
        "typedoc": "^0.20.25",
        "typescript": "~4.2.4",
        "yargs": "^16.2.0"
    },
    "scripts": {
        "setup": "ts-patch install",
        "clean": "rimraf ./plugin/**/*.d.ts ./plugin/**/*.js ./plugin/**/*.js.map plugin/node_modules plugin/package-lock.json plugin/README.md demo/node_modules demo-angular/node_modules",
        "tsc": "cpy '**/*.d.ts' '../plugin' --parents --cwd=src && tsc -skipLibCheck -d",
        "build": "cp README.md ./plugin && rm -f .tsbuildinfo && npm run tsc ",
        "publish": "npm run setup && npm run build && npm run build.angular && lerna publish --create-release=github --force-publish",
        "commitmsg": "commitlint -e $GIT_PARAMS"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nativescript-community/algolia.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/nativescript-community/algolia/issues"
    },
    "homepage": "https://github.com/nativescript-community/algolia#readme",
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "dependencies": {
        "ts-node": "^9.0.0"
    }
